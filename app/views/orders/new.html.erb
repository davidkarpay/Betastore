<html>
<head>
  <title><%= @page_title %></title>
</head>
<body>
<h1>Your Cart</h1>

<%= form_tag do %>
    <%= submit_tag "Submit Order", class: 'bnt btn-success' %>
        <table class="table">
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
          </tr>
          <%= f.fields_for :line_items do |line_item_fields| %>
            <% line_item = line_item_fields.object %>
            <%= line_item_fields.hidden_field :product_id %>
            <tr>
              <td><%= line_item.product.name %></td>
              <td><%= line_item_fields.text_field :quantity %></td>
              <td><%= number_to_currency line_item.total_price %></td>
              <td><%= number_to_currency line_item_total_price %></td>
            </tr>
          <%= end %>
          <tr>
            <td colspan="3">
            </td>
            <td><%= number_to_currency @order.total_price %></td>
          </tr>
        </table>
        <%= submit_tag "Submit Order", class: 'btn btn-success' %>
<% end %>
</body>
</html>