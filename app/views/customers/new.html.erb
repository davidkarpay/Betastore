<h1><%=@page_title%></h1>

<% if @customer.errors.present? %>
    <ul>
      <% @customer.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for @customer, url: sign_up_path do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>

    <%= form.submit 'Sign Up' %>
<% end %>

<p>Already have an account? <%= link_to "Log In", log_in_path %></p>
